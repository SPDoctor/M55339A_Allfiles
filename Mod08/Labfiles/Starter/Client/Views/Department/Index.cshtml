@model IEnumerable<Website.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h2 class="title">
    <span class="span-col-s">Departments</span>
</h2>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="photo-index-card">
            <div class="image-wrapper">
                <img class="photo-display-img" src="~/images/desk.jpg" />
            </div>
            <div class="display-picture-title">
                <h6>@Html.DisplayFor(modelItem => item.Name)</h6>
                <h6>@Html.DisplayFor(modelItem => item.Street)</h6>
                <h6>@Html.DisplayFor(modelItem => item.PhoneNumber)</h6>
            </div>
        </div>
    }
</div>

