@model Website.Models.Meeting

@{
    ViewData["Title"] = "Create";
}


<div class="row justify-content-center">
    <div class="col-5">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div class="form-group row">
                <label asp-for="Department" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <select asp-for="DepartmentId" asp-items="ViewBag.Departments" type="text" class="form-control" placeholder="Department" required>
                    </select>
                    <span asp-validation-for="DepartmentId"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FirstName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" required>
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" required>
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PhoneNumber" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Number" required>
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ReservationTime" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ReservationTime" type="datetime-local" class="form-control" placeholder="Reservation Time">
                    <span asp-validation-for="ReservationTime"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Participants" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Participants" type="number" class="form-control" placeholder="Number Participants">
                    <span asp-validation-for="Participants"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button id="formButton" type="submit" class="btn btn-outline-success">
                        Book Meeting
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
